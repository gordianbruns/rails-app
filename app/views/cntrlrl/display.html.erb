<h1>Displaying the users and messages</h1>
<% if @users %>
<ul>
  <% @users.each do |user| %>
  <li><%= user.name %>:</li>
    <% if user.messages %>
    <ul>
      <% user.messages.each do |message| %>
      <li><%= message.content %></li>
      <% end %>
    </ul>
    <% end %>
  <% end %>
</ul>
<% end %>